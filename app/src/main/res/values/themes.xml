<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabyTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.BabyTracker" parent="Base.Theme.BabyTracker" />

<!-- style.xml-->
    <style name="onboarding_title">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="onboarding_description">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="date_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="input">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="save">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="symptoms_name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010101</item>
    </style>
    <style name="settings_titles">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#010101</item>
    </style>
    <style name="saved">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>
    <style name="titles">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">#4625C4</item>
    </style>

    <style name="privacy">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#1E1F23</item>
    </style>

    <style name="home_titles">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="custom_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">27sp</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
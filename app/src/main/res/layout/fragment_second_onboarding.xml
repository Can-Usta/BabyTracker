<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.SecondOnboardingFragment"
    android:background="@color/white">


    <ImageView
        android:id="@+id/secondOnboardingBackgroundIV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboarding_second_image" />

    <View
        android:id="@+id/viewWhiteOverlaySecondOnboarding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/onboarding_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,1.1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/secondOnboardingTitleTV"
        style="@style/onboarding_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin8"
        android:layout_marginTop="@dimen/margin10"
        android:gravity="center"
        android:text="@string/second_onboarding_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewWhiteOverlaySecondOnboarding"/>

    <TextView
        android:id="@+id/secondOnboardingDescriptionTV"
        style="@style/onboarding_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin12"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginEnd="@dimen/margin11"
        android:gravity="center"
        android:text="@string/second_onboarding_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondOnboardingTitleTV" />

    <ImageView
        android:id="@+id/secondOnboardingSliderIV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondOnboardingDescriptionTV"
        app:srcCompat="@drawable/slider_image_second" />

    <Button
        android:id="@+id/secondOnboardingButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/save_button_height"
        android:layout_marginHorizontal="@dimen/margin12"
        android:layout_marginTop="@dimen/margin13"
        android:layout_marginBottom="@dimen/margin26"
        android:background="@drawable/onboarding_button"
        android:text="@string/onboarding_button_text"
        android:textSize="@dimen/textSize4"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/secondOnboardingBackgroundIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondOnboardingSliderIV" />




</androidx.constraintlayout.widget.ConstraintLayout>